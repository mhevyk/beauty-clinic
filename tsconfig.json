{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"], // WebWorker for .env types
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Import aliases */
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@images/*": ["src/assets/images/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@backgrounds/*": ["src/assets/backgrounds/*"],
      "@decorations/*": ["src/assets/decorations/*"],
      "@theme/*": ["src/theme/*"],
      "@api/hooks": ["src/api/generated/index.tsx"],
      "@constants/*": ["src/constants/*"],
      "@validation/*": ["src/validation/*"],
      "@config/*": ["src/config/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@type-helpers": ["src/types/helpers.ts"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
